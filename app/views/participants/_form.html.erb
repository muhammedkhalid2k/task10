<%= form_with(model: participant) do |form| %>
  <% if participant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
        <% participant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :registry_id, style: "display: block" %>
    <%= form.select :registry_id, Registry.all.pluck(:name, :id)%>
  </div>

  <div>
    <%= form.label :coordinator_id, style: "display: block" %>
    <%= form.select :coordinator_id, Coordinator.all.pluck(:name, :id)%>
  </div>

  <div>
    <%= form.label :gender, style: "display: block" %>
    <%= form.select :gender, ['Male', 'Pro']%>
  </div>

  <div>
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
